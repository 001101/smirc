pkgname=smirc
pkgver=0.0.3
pkgrel=3
pkgdesc='System monitor IRC bot'
url='https://github.com/epiphyte/smirc'
license=('MIT')
depends=('python' 'python-pyzmq' 'python-irc')
makedepends=('git' 'python-setuptools')
source=("git+$url")
sha256sums=('SKIP')

package() {
  cd ${srcdir}/$pkgname
  install -Dm 755 smirc.py ${pkgdir}/usr/bin/smirc
}
